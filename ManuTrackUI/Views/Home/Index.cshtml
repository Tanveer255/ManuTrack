@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="bg-blue-100 py-16 text-center" id="hero">
    <h1 class="text-4xl font-bold text-gray-800">Your Trusted Manufacturing Partner</h1>
    <p class="mt-4 text-lg text-gray-600">We specialize in high-quality products delivered on time, every time.</p>
    <a href="#services" class="mt-8 inline-block px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Learn More</a>
</section>

<!-- Services Section -->
<section id="services" class="py-16 bg-white">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-semibold text-gray-800">Our Services</h2>
        <p class="mt-4 text-lg text-gray-600">We offer a wide range of manufacturing services tailored to your needs.</p>
        <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800">Precision Manufacturing</h3>
                <p class="mt-2 text-gray-600">High-precision parts and components for a variety of industries.</p>
            </div>
            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800">Custom Fabrication</h3>
                <p class="mt-2 text-gray-600">Tailored solutions for your unique manufacturing needs.</p>
            </div>
            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800">Assembly Services</h3>
                <p class="mt-2 text-gray-600">Efficient and accurate assembly for complex products.</p>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="py-16 bg-gray-50">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-semibold text-gray-800">Our Products</h2>
        <p class="mt-4 text-lg text-gray-600">Explore the range of products we manufacture.</p>
        <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <img src="product1.jpg" alt="Product 1" class="h-48 w-full object-cover rounded-md">
                <h3 class="mt-4 text-xl font-semibold text-gray-800">Product One</h3>
                <p class="mt-2 text-gray-600">A reliable and durable product for industrial use.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <img src="product2.jpg" alt="Product 2" class="h-48 w-full object-cover rounded-md">
                <h3 class="mt-4 text-xl font-semibold text-gray-800">Product Two</h3>
                <p class="mt-2 text-gray-600">Innovative design for maximum performance.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <img src="product3.jpg" alt="Product 3" class="h-48 w-full object-cover rounded-md">
                <h3 class="mt-4 text-xl font-semibold text-gray-800">Product Three</h3>
                <p class="mt-2 text-gray-600">Built to withstand tough conditions in all environments.</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-16 bg-blue-600 text-white">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-semibold">Get in Touch</h2>
        <p class="mt-4 text-lg">We'd love to discuss your next project. Reach out to us today!</p>
        <a href="mailto:contact@manufactureco.com" class="mt-8 inline-block px-8 py-3 bg-white text-blue-600 rounded-lg hover:bg-gray-200">Contact Us</a>
    </div>
</section>

<div id="root"></div>
